project: dcpslib, ../stool_builder_idl_lib, dcps_rapidjson {
  idlflags      += -Wb,stub_export_include=Stool_Export.h \
                   -Wb,stub_export_macro=Stool_Export \
                   -I$(DDS_ROOT)/dds \
                   -I$(STOOL_BUILDER_ROOT)/builder_idl
  dcps_ts_flags += -Wb,export_macro=Stool_Export \
                   -Wb,cpp_include=$(STOOL_BUILDER_ROOT)/core_idl_json/DdsDcpsCoreTypeSupportImpl.h \
                   -Wb,cpp_include=$(STOOL_BUILDER_ROOT)/builder_idl_json/BuilderTypeSupportImpl.h \
                   -I$(STOOL_BUILDER_ROOT)/builder_idl
  dynamicflags  += STOOL_BUILD_DLL
  includes += $(DDS_ROOT)/dds

  requires += no_opendds_safety_profile

  Idl_Files {
    Stool.idl
  }

  TypeSupport_Files {
    Stool.idl
  }
}

