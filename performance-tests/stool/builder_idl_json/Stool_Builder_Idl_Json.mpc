project: dcpslib, dcps_rapidjson, ../stool_builder_idl_lib {
  dcps_ts_flags += -Sdefault \
                   -Wb,export_include=../builder_idl/Stool_Builder_Export.h \
                   -Wb,export_macro=Stool_Builder_Export \
                   -Wb,cpp_include=$(STOOL_BUILDER_ROOT)/builder_idl/BuilderC.h \
                   -Wb,cpp_include=$(STOOL_BUILDER_ROOT)/builder_idl/BuilderTypeSupportImpl.h \
                   -Wb,cpp_include=$(STOOL_BUILDER_ROOT)/core_idl_json/DdsDcpsCoreTypeSupportImpl.h \
                   -Wb,cpp_include=dds/DdsDcpsCoreTypeSupportImpl.h \
                   -I$(DDS_ROOT)/dds

  after += Stool_Core_Idl_Json

  dynamicflags  += STOOL_BUILDER_BUILD_DLL
  includes += $(DDS_ROOT)/dds

  requires += no_opendds_safety_profile

  Modify_Custom(Idl) {
    automatic_in = 0
  }

  TypeSupport_Files {
    ../builder_idl/Builder.idl
  }
}

