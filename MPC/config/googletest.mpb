project {
  expand(GTEST_ROOT) {
    $GTEST_ROOT
    $(DDS_ROOT)/tests/googletest
  }
  includes += $(GTEST_ROOT)/googletest/include
  libpaths += $(GTEST_ROOT)/build/googlemock/gtest/$(Configuration)
  lit_libs += gtest

  specific (prop:microsoft) {
    macros += _SILENCE_TR1_NAMESPACE_DEPRECATION_WARNING
  }

}
